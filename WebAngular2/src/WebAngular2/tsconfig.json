{
  "compileOnSave": true,
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "system",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "outDir": "../wwwroot/script/", // where transpiled file will be placed.
    "removeComments": false,
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es6",
    "moduleResolution": "node"
  },
  "exclude": [
    "bower_components",
    "node_modules",
    "wwwroot",
    "typings/main",
    "typings/main.d.ts"
  ]
}